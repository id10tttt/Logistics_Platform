<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_delivery_carrier_form_with_provider_network" model="ir.ui.view">
            <field name="name">delivery.carrier.form.provider.network.form</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='destination']" position='before'>
                    <page string="Network" attrs="{'invisible': [('delivery_type', '!=', 'network')]}">
                        <group>
                            <field name="network_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>